{% extends '_templates/base.njk' %}

{% block page_title %}Explore Texas{% endblock %}

{% block page_description %}Discover the best cities in Texas, their BBQ spots, and popular attractions.{% endblock %}

{% block content %}
<div class="container py-5">
  <div class="text-center mb-5">
    <h1 class="display-4 text-primary fw-bold">Explore Texas</h1>
    <p class="lead text-muted">Welcome to Texas! Explore some of our best cities and enjoy their rich culture and flavors.</p>
  </div>

  <section>
    <h2 class="text-secondary mb-4">Cities to Visit</h2>
    <p class="mb-4">Within our guides, youâ€™ll find the best BBQ spots and popular attractions in each major city.</p>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      {% for city in cities.Capitols %}
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="img/{{ city.image }}" alt="Photo of {{ city.Name }}" class="card-img-top">
            <div class="card-body">
              <h3 class="card-title text-primary h5">
                <a href="cities/{{ city.slug }}.html" class="stretched-link text-decoration-none text-primary">{{ city.Name }}</a>
              </h3>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
</div>
{% endblock %}

